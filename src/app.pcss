@layer reset, base, tokens, recipes, utilities;

:root {
	--font-system-fallback: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI";
	--font-inter: "Inter Variable", var(--font-system-fallback);
	--font-jakarta: "Plus Jakarta Sans Variable", var(--font-inter);

	--font-body: var(--font-inter);
	--font-heading: var(--font-jakarta);
	--font-code: "JetBrains Mono", "Fira Code", "Fira Mono", "Roboto Mono", "Menlo", monospace;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: var(--font-heading);
}
